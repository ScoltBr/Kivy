MDScreen:
    name: "pre-splash"
    MDFloatLayout:
        md_bg_color: 226/255, 32, 1/255, 1
        Image:
            source: "assets/logo.png"
            size_hint: .26, .26
            pos_hint: {"center_x": .5, "center_y": .55}
            canvas.before:
                Color:
                    rgb: 1, 1, 1, 1
                Ellipse:
                    size: 130, 130
                    pos: 110, 250
    MDLabel:
        text: "Mussum Ipsum"
        pos_hint: {"center_x":.5, "center_y": .2}
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        font_size: "35sp"
        font_name: "Poppins-SemiBold.ttf"
    MDLabel:
        text: "Mussum Ipsum, cacilds vidis litro abertis."
        pos_hint: {"center_x":.5, "center_y": .15}
        halign: "center"
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        font_size: "13sp"
        font_name: "Poppins-Regular.ttf"
